{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",

    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vitest/globals", "vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src"]
}

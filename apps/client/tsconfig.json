{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["vitest/globals", "vite/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      // "@/*": ["./src/*"],
      "@mikoto-io/lucid": ["../../packages/lucid/src/index.ts"],
      "mikotojs": ["../../packages/mikotojs/src/index.ts"]
    }
  },
  "include": [
    "src"
  ]
}
